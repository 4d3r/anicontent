<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="/styles/theme.css" rel="stylesheet">
    <link href="/styles/list.css" rel="stylesheet">
    <link href="/styles/header.css" rel="stylesheet">
    <style>
        .container {
            display: flex;
            max-width: 100%;
            margin: 0 auto;
            padding-top: 15px;
        }
        .anime-image {
            margin-right: 20px;
            display: flex;
            flex-direction: column;
            align-items: center;
            border-radius: 15px
        }
        .anime-image img {
            width: 300px;
            height: 400px;
            object-fit: contain;
            border-radius: 15px;
        }
        .watch-button {
            margin-top: 15px;
            padding: 10px 30px;
            background-color: rgb(30, 30, 30);
            border: none;
            border-radius: 25px;
            color: rgb(255, 255, 255);
            font-family: Arial, Helvetica, sans-serif;
        }
    </style>
    <title>AniContent</title>
</head>
<body>
    <%- include("./elements/header.ejs") %>

    <div class="container">
        <div class="anime-image">
            <img src="<%= icon %>">
            <button id="<%= id %>" class="watch-button __watch">Смотреть</button>
        </div>
        
        <div class="anime-info">
            <h1 class="anime-title"><%= name %></h1>
            <div class="anime-description">
                <p><%= desc %></p>
            </div>
        </div>
    </div>

    <script src="/scripts/anime.js"></script>
</body>
</html>